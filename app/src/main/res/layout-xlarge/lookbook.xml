<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/LBLayout" android:layout_width="800px"
	android:layout_height="1200px" android:layout_gravity="center" android:background="@drawable/lookbook_cover">
    <FrameLayout android:layout_width="600px" android:layout_height="450px" android:layout_marginTop="550px" android:layout_marginLeft="150px" android:layout_gravity="top|left" android:id="@+id/LookBookTaskLayout" android:background="@drawable/popup_dailytask">
        <TextView android:textScaleX="0.8" android:text="TextView" android:textStyle="bold" android:layout_height="wrap_content" android:layout_marginTop="90px" android:layout_gravity="top|center_horizontal" android:id="@+id/LookBookTaskNameView" android:editable="false" android:layout_width="wrap_content" android:textColor="@color/setting_color" android:textSize="45px"></TextView>
        <TextView android:textScaleX="0.8" android:text="TextView" android:layout_height="wrap_content" android:layout_marginTop="160px" android:layout_gravity="top|center_horizontal" android:id="@+id/LookBookTaskDescView" android:editable="false" android:layout_width="500px" android:textColor="@color/white" android:textSize="35px"></TextView>
        <ImageButton android:id="@+id/DoTaskButton" android:layout_width="200px" android:layout_height="100px" android:background="@drawable/do_task_btn" android:soundEffectsEnabled="false" android:layout_marginBottom="10px" android:layout_gravity="bottom|center_horizontal"></ImageButton>
    </FrameLayout>
    <ImageView android:soundEffectsEnabled="false" android:id="@+id/LookBookSwipeView" android:layout_gravity="top|right" android:background="@drawable/swipe" android:layout_width="205px" android:layout_height="195px"></ImageView>
    <ImageButton android:id="@+id/LookBookGoHomeButton" android:layout_width="100px" android:layout_height="100px" android:background="@drawable/gohome_btn" android:soundEffectsEnabled="false" android:layout_marginBottom="50px" android:layout_gravity="bottom|right" android:layout_marginRight="50px"></ImageButton>
</FrameLayout>
